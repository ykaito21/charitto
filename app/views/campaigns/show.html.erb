<div class="container">
  <div class="row">
    <div class="wrapper">
      <div class="base-img">
        <%= cl_image_tag @campaign.camp_image.url(:thumnail) %>
      </div>
      <div class="base-info">
        <div class="base-name">
          <%= @campaign.name %>
          <% if policy(@campaign).update? %>
            <%= link_to "変更 |", edit_campaign_path(@campaign), class: "" %>
            <%= link_to "削除", campaign_path(@campaign), class: "", method: :delete, data: { confirm: "削除しますか？" }  %>
          <% end %>
        </div>
        <div class="base-des">
          <p>Some awesome description.</p>
          <p>値段：<%= humanized_money_with_symbol(@campaign.price) %></p>


          <%= form_tag orders_path do %>
            <%= hidden_field_tag 'campaign_id', @campaign.id %>
            <%= submit_tag '購入', class: 'btn btn-orange' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


