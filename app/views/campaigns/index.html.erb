<div class="container">
  <div class="row">
    <h1>キャンペーン一覧</h1>
    <div class="cards">
      <% @campaigns.each do |campaign| %>
        <!-- <div class="col-sm-6 col-md-4"> -->
          <%= link_to campaign_path(campaign) do %>
          <div class="card">
            <%= cl_image_tag campaign.camp_image, class: "card-img" %>
            <div class="card-content">
              <h1 class="card-title"><%= campaign.name %></h1>
              <h1 class="card-title">値段：<%= humanized_money_with_symbol(campaign.price) %></h1>
              <p class="card-text"><%= campaign.organization.name %></p>
            </div>
            <div class="card-link">
              <%= link_to "詳しく", campaign_path(campaign), class: "btn btn-orange"  %>
            </div>
          </div>
          <% end %>
        <!-- </div> -->
      <% end %>
    </div>
  </div>
</div>
