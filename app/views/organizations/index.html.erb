<div class="container">
  <div class="row">
    <h1>サポーター一覧</h1>
    <div class="cards">
      <% @organizations.each do |organization| %>
        <!-- <div class="col-xs-6 col-sm-4"> -->
          <%= link_to organization_path(organization) do %>
          <div class="card">
            <%= cl_image_tag organization.org_image, class: "card-img" %>
            <div class="card-content">
              <h1 class="card-title"><%= organization.name %></h1>
              <p class="card-text"><%= organization.description %></p>
            </div>
            <div class="card-link">
              <%= link_to "詳しく", organization_path(organization), class: "btn btn-orange"  %>
            </div>
          </div>
          <% end %>
        <!-- </div> -->
      <% end %>
    </div>
  </div>
</div>
