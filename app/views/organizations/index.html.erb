<div class="container">
  <div class="row">
    <% @organizations.each do |organization| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to organization_path(organization) do %>
        <div class="card">
          <div class="card-description">
            <h2><%= organization.name %></h2>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
