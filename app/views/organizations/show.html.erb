<div class="container">
  <div class="row">
    <div class="wrapper">
      <div class="base-img">
        <%= cl_image_tag("s_003o", class: "img-siz") %>
      </div>
      <div class="base-info">
        <div class="base-name">
          <%= @organization.name %>
          <% if policy(@organization).update? %>
            <%= link_to "変更 |", edit_organization_path(@organization), class: "" %>
            <%= link_to "削除", organization_path(@organization), class: "", method: :delete, data: { confirm: "削除しますか？" }  %>
          <% end %>
        </div>
        <div class="base-des">
          This is description
        </div>
      </div>
    </div>
    <hr>
    <% @organizations.each do |organization| %>
      <div class="col-xs-6 col-sm-4">
        <%= link_to organization_path(organization) do %>
        <div class="card">
          <%= cl_image_tag("s_003o", class: "card-img") %>
          <div class="card-content">
            <h1 class="card-title"><%= organization.name %></h1>
            <p class="card-text"><%= organization.name %></p>
          </div>
          <div class="card-link">
            <%= link_to "詳しく", organization_path(organization), class: "btn btn-orange"  %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>



